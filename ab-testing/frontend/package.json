{
	"name": "@guardian/ab-testing-frontend",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "pnpm build:clean && pnpm build:prod && pnpm build:code && pnpm build:finalize",
		"build:clean": "rm -rf ./output ./output-temp",
		"build:prod": "AB_TESTING_OUTPUT=output-temp AB_TESTING_ENV=production vite build",
		"build:code": "AB_TESTING_ENV=code vite build",
		"build:finalize": "mv ./output-temp/index.html ./output/ab-tests.html && mv ./output/index.html ./output/ab-tests-code.html && rm -rf ./output-temp",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"devDependencies": {
		"@guardian/ab-testing-config": "workspace:ab-testing-config",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.49.5",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^6.2.6"
	}
}
