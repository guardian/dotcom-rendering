{
	"extends": "@guardian/tsconfig/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": "./",
		"forceConsistentCasingInFileNames": true,
		"jsx": "react-jsx",
		"jsxImportSource": "@emotion/react",
		"lib": ["esnext", "es2015", "dom"],
		"noEmit": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"paths": {
			/* Aliases should also be added to the webpack and jest configurations */
			"*": ["node_modules/@types/*", "*"] // Make sure that package linking doesn't confuse things https://github.com/microsoft/TypeScript/issues/11916#issuecomment-257130001
		},
		"preserveConstEnums": true,
		"types": [
			"node",
			"jest",
			"react",
			"react-dom",
			"@testing-library/jest-dom",
			"webpack-env",
			"youtube",
			"twitter-for-web",
			// This is to fix a "Cannot find namespace 'Chai'" error that arose during
			// the upgrade to Storybook 9. Storybook uses vitest, which has chai as a
			// dependency, and this makes the chai types available globally.
			"chai"
		]
	},
	"include": ["**/*", ".storybook/mocks/bridgetApi.ts"],
	"exclude": [
		"storybook-static",
		"target",
		"dist",
		"node_modules",
		"playwright-report"
	]
}
