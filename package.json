{
    "name": "@guardian/guui",
    "version": "2.0.0",
    "description": "Frontend rendering framework",
    "main": "dist/app.server.js",
    "repository": "git+https://github.com/guardian/guui.git",
    "keywords": [],
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/guardian/guui/issues"
    },
    "homepage": "https://github.com/guardian/guui#readme",
    "dependencies": {
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "react-hot-loader": "^4.0.0-rc.0",
        "require-dir": "^1.0.0",
        "reset-css": "^2.2.1",
        "styletron-client": "^3.0.4",
        "styletron-react": "^3.0.4",
        "styletron-server": "^3.0.4"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0-beta.40",
        "@babel/plugin-external-helpers": "^7.0.0-beta.40",
        "@babel/plugin-proposal-class-properties": "^7.0.0-beta.40",
        "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.40",
        "@babel/plugin-syntax-dynamic-import": "^7.0.0-beta.40",
        "@babel/plugin-transform-runtime": "^7.0.0-beta.40",
        "@babel/preset-env": "^7.0.0-beta.40",
        "@babel/preset-flow": "^7.0.0-beta.40",
        "@babel/preset-react": "^7.0.0-beta.40",
        "@babel/register": "^7.0.0-beta.40",
        "@babel/runtime": "^7.0.0-beta.40",
        "as-table": "^1.0.31",
        "babel-eslint": "^8.2.1",
        "babel-loader": "^8.0.0-beta.0",
        "babel-plugin-dynamic-import-node": "^1.2.0",
        "babel-plugin-inline-react-svg": "^0.5.2",
        "babel-plugin-module-resolver": "^3.1.0",
        "babel-plugin-preval": "^1.6.3",
        "babel-plugin-react-require": "^3.0.0",
        "chalk": "^2.3.0",
        "decamelize": "^2.0.0",
        "eslint": "^4.18.0",
        "eslint-config-airbnb": "^16.1.0",
        "eslint-config-prettier": "^2.6.0",
        "eslint-import-resolver-babel-module": "^4.0.0",
        "eslint-plugin-flow-header": "^0.2.0",
        "eslint-plugin-flowtype": "^2.45.0",
        "eslint-plugin-import": "^2.7.0",
        "eslint-plugin-jsx-a11y": "^6.0.2",
        "eslint-plugin-prettier": "^2.6.0",
        "eslint-plugin-react": "^7.4.0",
        "execa": "^0.9.0",
        "filesizegzip": "^2.0.0",
        "flow-bin": "^0.66.0",
        "friendly-errors-webpack-plugin": "^1.6.1",
        "prettier": "^1.7.4",
        "semver": "^5.5.0",
        "simple-progress-webpack-plugin": "^1.1.0",
        "webpack": "^3.11.0",
        "webpack-bundle-analyzer": "^2.10.0",
        "webpack-dev-server": "^2.11.1",
        "webpack-merge": "^4.1.1",
        "webpack-node-externals": "^1.6.0"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "all",
        "singleQuote": true,
        "bracketSpacing": true
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "globals": {
            "React": false
        },
        "parserOptions": {
            "ecmaVersion": "2017",
            "sourceType": "module",
            "ecmaFeatures": {
                "jsx": true
            }
        },
        "extends": [
            "airbnb",
            "prettier",
            "plugin:flowtype/recommended",
            "prettier/flowtype",
            "prettier/react"
        ],
        "settings": {
            "import/resolver": {
                "babel-module": {
                    "root": [
                        "./src"
                    ]
                }
            }
        },
        "plugins": [
            "flow-header",
            "flowtype",
            "react",
            "prettier"
        ],
        "rules": {
            "prettier/prettier": [
                "error"
            ],
            "flow-header/flow-header": "error",
            "consistent-return": "off",
            "react/react-in-jsx-scope": "off",
            "react/prop-types": "off",
            "react/jsx-filename-extension": [
                1,
                {
                    "extensions": [
                        ".js",
                        ".jsx"
                    ]
                }
            ]
        },
        "overrides": [
            {
                "files": [
                    "src/**/*.demo.js",
                    "lib/*.js"
                ],
                "rules": {
                    "import/prefer-default-export": "off"
                }
            },
            {
                "files": [
                    "__tasks__/**/*.js"
                ],
                "rules": {
                    "global-require": "off",
                    "no-console": "off"
                }
            }
        ],
        "env": {
            "browser": true
        }
    },
    "eslintIgnore": [
        "!.eslint.js",
        "!.babelrc.js",
        "dist",
        "flow-typed"
    ]
}
